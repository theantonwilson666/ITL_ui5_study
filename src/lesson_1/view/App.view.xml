<mvc:View
	controllerName="study.lesson_1.controller.Main"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	displayBlock="true">
	<Shell appWidthLimited="false">
		<App id="app" width="100%">
			<Page title="Заголовок">
				<content>
					<Title text="{/title}" class="boldText sapUiTinyMargin" titleStyle="H1" />
					<Text text="123 343" />

					<Button text="Добавить запись"
						press="addProduct"
						icon="sap-icon://add" />


					<List
						id="ProductList"
						items="{/data}"
						includeItemInSelection="true">
						<StandardListItem
							title="{product_name}"
							description="{product_id}"
							icon="sap-icon://product"
							iconDensityAware="false"
							iconInset="false"/>
					</List>

				</content>
			</Page>
		</App>
	</Shell>
</mvc:View>